package while_Pattern;

public class Dimond {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int n=7;
		int n1=(n+1)/2;
		int n2=n1-1;
		int i=1;
		while(i<=n1) {
			int j=1;
			while(j<=n1 - i) {
				System.out.print(" ");
				j++;
			}
			j =1;
			while(j<=(2*i)- 1) {
				System.out.print("*");
				j++;
			}
			System.out.println();
			i++;
			
		}
		i=1;
		while(i<=n2) {
			int j=1;
			while(j<=(n2-i)-1) {
				System.out.print("*");
				j++;
			}
			j=1;
			while(j<=(2*i)-1) {
				System.out.print(" ");
				j++;
			}
			System.out.println();
			i++;
			
		}

	}

}
